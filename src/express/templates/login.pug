extends layout.pug
include partials/field-error.pug

block content
  .wrapper
    header.header
      a.header__logo.logo(href="/")
        img.logo__image(src="/img/icons/logo-image-only.svg" alt="логотип Тайпотеки")
        span.logo__name Типотека
      nav.header__nav
        ul.header__nav-list
          li.header__list-item
            a.header__registration(href="/register") Регистрация
          li.header__list-item
            a.header__enter Вход с паролем
      a.header__search.button.button--search(href="/search" aria-label="поиск по сайту")
    main
      h1.visually-hidden Регистрация пользователя
      section
        .popup.popup--registration.popup--anti
          a.popup__button.button.button--popup-close(aria-label="Закрыть окно") Закрыть окно
          h2.popup__title Войти
          .popup__form.form.form--log-in
            form(action="/login" method="post")
              .form__field
                label
                  input(type="email" name="email" placeholder="Электронная почта" required="" value=(userEmail ? userEmail : null))
              if (validationMessages && 'email' in validationMessages)
                +insertErrorMessage(validationMessages.email)
              .form__field
                label
                  input(type="password" name="password" placeholder="Пароль" required="")
              if (validationMessages && 'password' in validationMessages)
                +insertErrorMessage(validationMessages.password)
              button.form__submit-btn.form__submit-btn--log-in.button.button--colored(type="submit") Войти
    include partials/footer.pug
