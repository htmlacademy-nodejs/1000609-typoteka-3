extends ../layout.pug

block content
  .wrapper
    header.header
      a.header__logo.logo(href="/")
        img.logo__image(src="/img/icons/logo-image-only.svg" alt="логотип Тайпотеки")
        span.logo__name Типотека
      nav.header__nav
        ul.header__nav-list
          li.header__list-item
            p Алёна Фролова
          li.header__list-item
            a.header__exit(href="#") Выйти
      a.header__avatar.avatar
        img(src="/img/avatar-2.png" alt="аватар пользователя")
      a.header__search.button.button--search(href="/search" aria-label="поиск по сайту")
    main
      section.post
        h1.visually-hidden Пост
        section.post__content
          h2.visually-hidden Основное содержание
          .post__wrapper
            .post__head
              a.post__backwards.button.button--backwards(href="#") Назад
              +publicationDate(formatDatetime(post.createdAt), formatDate(post.createdAt))(class="post__date")
              h2.post__title.title.title--main #{post.title}
              ul.post__themes.themes
                each postCategory in post.categories
                  li.themes__item
                    a.themes__item-link(href="#") #{postCategory.name}
                      =" "
                      sup #{categories[categories.findIndex((category) => category.id === postCategory.id)].count}
                    button.themes__remove-btn(type="button") Удалить категорию
            .post__picture
              img(src="/img/sea-fullsize@1x.jpg" alt="пейзаж море, скалы, пляж")
            .post__text
              h3 #{post.announcement}
              p #{post.fullText}
        .post__wrapper.post__wrapper--comments
          section.post__comments.comments
            h2.comments__title.title.title--middle Комментарии
            ul.comments__list
              each comment in post.comments
                li.comments__comment
                  .comments__avatar.avatar
                    img(src="/img/avatar-1.png" alt="аватар пользователя")
                  .comments__text
                    .comments__head
                      p Евгений Петров •
                      +publicationDate(formatDatetime(comment.createdAt), formatDate(comment.createdAt))(class="comments__date")
                    p.comments__message #{comment.text}
            .comments__footer.comments__footer--user
              form(action=`/articles/${id}/comments` method="POST" enctype="application/x-www-form-urlencoded" autocomplete="off")
                .comments__avatar.avatar
                  img(src="/img/avatar-2.png" alt="аватар пользователя")
                label
                  textarea(rows="1" name="message" placeholder="Присоединиться к обсуждению") #{comment ? comment : undefined}
                button.comments__button.button.button--colored(type="submit") Опубликовать
                if (validationMessages)
                  p.form__error-message #{validationMessages.text}
    include ../partials/footer.pug
