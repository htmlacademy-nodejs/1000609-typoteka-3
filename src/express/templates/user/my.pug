extends ../layout.pug

block content
  .wrapper.wrapper--nobackground
    include ../partials/header.pug
    main.main-page.main-page--padding
      section.main-page__notes.notes
        h1.notes__title Мои записи
        ul.notes__list
          each post in posts
            li.notes__list-item
              form(action=`/my/${post.id}` method="POST")
                +publicationDate(formatDatetime(post.createdAt), formatDate(post.createdAt))(class="notes__item-time")
                a.notes__item-text(href=`/articles/edit/${post.id}`) #{post.title}
                button.notes__button.button.button--close-item(type="submit")
                  span.visually-hidden Закрыть строку списка
    include ../partials/footer.pug
